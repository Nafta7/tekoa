html
  box-sizing: border-box
  background-color: var(--major-color)

*
  margin: 0
  padding: 0

*, *:before, *:after
  box-sizing: inherit

body
  margin: 0
  overflow: hidden

a
  color: var(--white)
  text-decoration: none

  &:visited
    text-decoration: none

:root
  font-size-responsive: 12px 20px 480px 1280px
