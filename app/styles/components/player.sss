.player
  position: absolute
  bottom: 13vh
  min-height: 67vh
  max-height: 67vh
  width: 100%

  @media (--small-viewport)
    width: 65%

  &.minimize
    bottom: 12vh

  &.minimize .player-container
    transform: translate(-41%, 58%) scale(0.15)

  &.minimize .player-toggle
    transform: translate(-41%, 58%) scale(0.15)

.player-container
  position: absolute
  padding-bottom: 56.25%
  width: 100%
  height: 100%
  overflow: hidden
  transition: transform 0.3s cubic-bezier(0.4, 0, 1, 1)
  z-index: 7

  & iframe
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
