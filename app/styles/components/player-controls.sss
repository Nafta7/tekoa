.player-controls-container
  position: absolute
  bottom: 0
  width: 100%
  min-height: 13vh
  max-height: 13vh
  background-color: var(--major-color)
  border-top: 1px solid var(--major-color-d)

.player-controls-list
  display: flex
  align-items: center

.player-controls
  list-style: none
  display: flex
  justify-content: center
  flex: 1
  z-index: 3

.control
  padding: 0.5rem 2rem
  font-size: 4em
  color: var(--white)
  background-color: transparent
  border-width: 0
  transition: background-color var(--base-transition-time)

  &:hover
    background-color: var(--major-color-d)
    cursor: pointer
